@model IEnumerable<UrlShortener.Domain.Entities.Url>
<table class="table highlight">
    <thead>
        <tr>
            <th scope="col">Short URL</th>
            <th scope="col">Original URL</th>
            <th scope="col">Created</th>
            <th scope="col">Clicks Count</th>
            <th scope="col">Stats</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var url in Model)
        {
            <tr>
                <th scope="row"><a href="@string.Format("https://localhost:5001/{0}",url.ShortUrl)">@string.Format("https://localhost:5001/{0}", url.ShortUrl)</a></th>
                <td><a href="@string.Format("https://localhost:5001/{0}",url.ShortUrl)">@url.OriginalUrl</a></td>
                <td>@url.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>@url.Clicks.Count()</td>
                <td>
                    <a href=@string.Format("/urls/{0}", url.ShortUrl)>
                        <svg class="octicon octicon-graph" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true">
                            <path fill-rule="evenodd" d="M16 14v1H0V0h1v14h15zM5 13H3V8h2v5zm4 0H7V3h2v10zm4 0h-2V6h2v7z"></path>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>